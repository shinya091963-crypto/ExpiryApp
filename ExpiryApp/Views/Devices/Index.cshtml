@model IEnumerable<ExpiryApp.Models.Device>

@{
    ViewData["Title"] = "機器一覧";
    var q = ViewBag.Query as string;
    var total = (int?)ViewBag.TotalCount ?? 0;
}

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success ea-rounded" role="alert">
        @TempData["StatusMessage"]
    </div>
}

@if (!string.IsNullOrWhiteSpace(q))
{
    <div class="alert alert-info ea-rounded d-flex align-items-center justify-content-between" role="status">
        <div>“@q” の検索結果：@total 件</div>
        <a class="btn btn-sm btn-outline-secondary" asp-action="Index">全件表示に戻る</a>
    </div>
}

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Create">機器を追加</a>
</div>

<div class="card ea-rounded ea-shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>名称</th>
                        <th>設置場所</th>
                        <th>所管部門</th>
                        <th style="width: 220px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AssetTag</td>
                                <td>@item.Name</td>
                                <td>@item.Location</td>
                                <td>@item.OwnerDept</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.DeviceId">詳細</a>
                                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.DeviceId">編集</a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.DeviceId">削除</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">該当データがありません。</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
